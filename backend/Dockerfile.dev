# ============================================================================
# Backend Development Dockerfile
# Optimized for hot-reload and development workflow
# ============================================================================

FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app/src

# Create non-root user
RUN useradd -m -u 1000 -s /bin/bash appuser

# Set working directory
WORKDIR /app

# Copy dependency files for caching
COPY --chown=appuser:appuser pyproject.toml README.md ./

# Install dependencies including dev dependencies  
# Using pip with --trusted-host to work around SSL cert issues in CI
RUN pip install --no-cache-dir \
    --trusted-host pypi.org \
    --trusted-host files.pythonhosted.org \
    -e ".[dev]"

# Switch to non-root user
USER appuser

# Source code will be mounted as a volume in docker-compose.yml
# This allows hot-reload during development

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run with auto-reload enabled
CMD ["python", "-m", "uvicorn", "papertrade.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"]

