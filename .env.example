# ============================================================================
# Development Environment Configuration for PaperTrade
# ============================================================================
# This file contains safe defaults for local development.
# For production, see .env.production.example

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=papertrade_dev
POSTGRES_USER=papertrade
POSTGRES_PASSWORD=papertrade_dev_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security
# Generate a secure secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-secret-key-change-in-production

# Market Data API (Phase 2)
# Alpha Vantage API key - Get yours at: https://www.alphavantage.co/support/#api-key
# Free tier: 5 API calls/min, 500/day - Premium tiers available for higher rate limits
ALPHA_VANTAGE_API_KEY=your_api_key_here
ALPHA_VANTAGE_RATE_LIMIT_PER_MIN=5
ALPHA_VANTAGE_RATE_LIMIT_PER_DAY=500

# Authentication (Phase 3)
# Clerk API keys - Get yours at: https://dashboard.clerk.com/last-active?path=api-keys
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
VITE_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE

# E2E Testing
# Test user email for E2E tests - should exist in Clerk
E2E_CLERK_USER_EMAIL=test-e2e@papertrade.dev

# Redis Password (Optional)
# REDIS_PASSWORD=your_redis_password_here

# Database URL (Composite)
DATABASE_URL=postgresql+asyncpg://papertrade:papertrade_dev_password@localhost:5432/papertrade_dev

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
