# Production Environment Variables for PaperTrade
# Copy this to .env.production and fill in your actual secrets
# DO NOT commit .env.production to git!

# PostgreSQL Database
POSTGRES_DB=papertrade
POSTGRES_USER=papertrade
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Application Security
SECRET_KEY=CHANGE_ME_RANDOM_SECRET_KEY_HERE

# Alpha Vantage API (for stock price data)
# Get your free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=CHANGE_ME_YOUR_API_KEY_HERE

# Clerk Authentication (Frontend)
# Get from: https://dashboard.clerk.com/last-active?path=api-keys
VITE_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE

# Clerk Authentication (Backend)
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE

# Frontend API Configuration
# Set this to the actual URL where your backend will be accessible
# Examples:
#   - Local VM: http://192.168.x.x:8000/api/v1
#   - Production: https://api.yourdomain.com/api/v1
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_LOG_LEVEL=INFO
