# ============================================================================
# Frontend Development Dockerfile
# Optimized for hot-reload with Vite dev server
# ============================================================================

FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files for layer caching
COPY package.json package-lock.json ./

# Install dependencies with increased timeout and retries for network resilience
# Use npm ci for reproducible installs while relying on npm config for timeout handling
RUN npm config set fetch-timeout 600000 && \
    npm config set fetch-retries 5 && \
    npm config set fetch-retry-mintimeout 20000 && \
    npm config set fetch-retry-maxtimeout 120000 && \
    npm ci --no-audit --prefer-offline || \
    (echo "First install attempt failed, retrying..." && npm ci --no-audit)

# Copy source code (will be overridden by volume mount if present)
# This ensures the container works even without volume mounts
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Health check on dev server
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:5173/ || exit 1

# Run Vite dev server with host 0.0.0.0 to allow external connections
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
